extends layout

block content

  <h3>Base de conocimiento</h3>
  <form action="javascript:void(0)" id="login">
  <div class="form-group">
  <label for="username">Usuario</label>
  <input type="text" class="form-control" id="username" placeholder="Ingrese su nombre de usuario" required>
  </div>
  <div class="form-group">
  <label for="password">Contraseña</label>
  <input type="password" class="form-control" id="password" placeholder="Contraseña" required>
  </div>
  <button type="submit" class="light-blue darken-4 waves-effect waves-light btn" id="submit">Loguear</button>
  </form>
  
block script
  script(src='/javascripts/login.js')
  if msg
      script(type='text/javascript').
        Materialize.toast('#{msg}', 3000, 'rounded');
